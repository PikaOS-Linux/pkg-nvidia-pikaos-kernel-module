


.PHONY: install
all:
	true

install:
		fakeroot dkms build --verbose --dkmstree "${MK_WORKDIR}" -m nvidia/"${DRIVER}" -k "${KERNEL}"
		install -Dt "$(DESTDIR)/usr/lib/modules/"${KERNEL}"/extramodules" -m644 nvidia/"${DRIVER}"/"${KERNEL}"/"${CARCH}"/module/*
		find "$(DESTDIR)" -name '*.ko' -exec xz -T1 {} +
		mkdir -p "$(DESTDIR)"/etc/modprobe.d/
		install -D -m 644 blacklist-pika-nouveau.conf $(DESTDIR)/etc/modprobe.d/blacklist-pika-nouveau.conf
		mkdir -p "$(DESTDIR)"/etc/modules-load.d/
		install -D -m 644 pika-nvidia.conf $(DESTDIR)/etc/modules-load.d/pika-nvidia.conf